@import "_fonts"


.comments-box
	margin 15px 10px
	background white
	font-family Roboto
	font-weight 200
	font-size 16px
	color #424242


.main-title
	font-size 20px
	font-weight 500
	margin-bottom: 20px;

.comment
	// border 1px solid black
	margin 10px 0 0 10px
	padding 8px 10px
	background #ebebeb//#E0E0E0//#f5f5f5
	box-shadow: 1px 1px 2px #6b6b6b//#343434;
	border-radius: 3px;
	position relative
	min-height 40px
	display: flex;
	flex-direction: column;
	&:before
		content ''
		position absolute
		height 30px
		width 10px
		top 5px
		left 0
		background url(/assets/comment.svg)
		background-size: contain;
		background-position: center;
		background-repeat: no-repeat;
		transform: translate(-100%, 0);
.comment__info-box
	display flex
	white-space: nowrap;
	overflow: hidden;
	&.new
		flex-direction column
		.comment__user
			margin-right 0
		.el-input
			margin: 0 0 8px 0px;
.el-textarea
	margin 8px 0 0 0
.comment__user
	font-size 14px
	font-weight 400
	margin-right 8px
.comment__date
	font-size 12px
	line-height 16px
	font-weight 200
	// font-style italic
	color #7e7e7e
	text-overflow: ellipsis;
	overflow: hidden;
.comment__content
	margin 6px 0 0 0
	text-align: justify;

button.send
	padding: 8px 16px;
	margin: 10px 0 0 auto;
	background: #808080;
	color: white;
	font-weight: 500;
	text-transform: uppercase;
	font-size: 12px;
	line-height: 14px;
	border: 1px solid transparent;
	border-radius: 3px 0 3px 0;
	cursor pointer
	outline none
	&:hover
		box-shadow: 0px 0px 2px black;
	&:active
		box-shadow: inset 0 0 11px #fff;
		border: 1px solid #9e9e9e;
